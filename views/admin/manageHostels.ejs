            <div class="col-12">
                <h1 class="text-center mb-4" style="color: #000000;">Hostel Management</h1>
                <!-- Table to Display Hostels -->
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" style="background-color: #fff; border-radius: 10px;">
                        <thead>
                            <tr>
                                <th scope="col">Hostel ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Remaining Rooms</th>
                                <th scope="col">Location</th>
                                <th scope="col">Contact Number</th>
                                <th scope="col">Available rooms</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
<!-- below is the code for showing the hostel details along with the delete button , needd to change the user to hostel ,first study how to do that -->

                                <% hostels.forEach(hostel => { %>
                                    <tr>
                                        <td><%= hostel.hostelID %></td>
                                        <td><%= hostel.hostelname %></td>
                                        <td><%= hostel.monthlyRent %></td>
                                        <!-- <td><%= hostel.facilities.join(', ') %></td> Display facilities as a comma-separated string -->
                                        <td><%= hostel.location %></td>
                                        <td><%= hostel.ContactNumber %></td>
                                        <td><%= hostel.numberOfRooms %></td>
                                        <td>
                                            <form action="/delete/<%= hostel._id %>" method="POST">
                                                <button type="submit" style="background-color: red; color:#fff">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                                
                        </tbody>
                    </table>
