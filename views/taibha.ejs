<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="css/annex.css">
    <title>Taibha Hostel</title>
  </head>
  <body>
    <div id="hostelID" data-hostel-id="<%= hostelID %>"></div>
    <div id="userID" data-user-id="<%= user ? user._id : '' %>"></div>

    <nav class="navbar navbar-expand-lg navbar-light bar-bg fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/homepage">
          <h1 class="brand"><span style="color: red;">Stay</span><span style="color: royalblue;">Spot</span></h1>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link active" style="padding-left: 10px; padding-right: 10px; color:#fff; font-family:Roboto; font-size: 18px; font-weight:600;" href="/homepage">Home</a>
            <a class="nav-link" style="padding-left: 10px; padding-right: 10px; color:#fff; font-family:Roboto; font-size: 18px; font-weight:600;" href="/my-reserves">My Reserves</a>
            <a class="nav-link" style="padding-left: 10px; padding-right: 10px; color:#fff; font-family:Roboto; font-size: 18px; font-weight:600;" href="/search">Search</a>
            <a class="nav-link" style="padding-left: 10px; padding-right: 10px; color:#fff; font-family:Roboto; font-size: 18px; font-weight:600;" href="/contact-us">Contact Us</a>
          </div>
        </div>
      </div>
    </nav>

    <div class="carousel-container">
      <div id="carouselTaibha" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselTaibha" data-slide-to="0" class="active"></li>
          <li data-target="#carouselTaibha" data-slide-to="1"></li>
          <li data-target="#carouselTaibha" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="resource/t4.jpg" class="d-block w-100" alt="Taibha Front">

          </div>
          <div class="carousel-item">
            <img src="resource/t2.jpg" class="d-block w-100" alt="Room View">
          </div>
          <div class="carousel-item">
            <img src="resource/t1.jpg" class="d-block w-100" alt="Facilities">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselTaibha" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselTaibha" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="container">
      <div class="col-12">
        <h1 class="text-center text-white mt-5 mb-4">Taibha Hostel</h1>
        <div class="col-12 col-lg-12 d-flex justify-content-center">
          <div class="buttons-container w-100">
            <div class="d-flex justify-content-between">
              <button onclick="about()" id="aboutButton" class="p-3 button selected-button">About</button>
              <button onclick="timeToVisit()" id="timeToVisitButton" class="p-3 button">Amenities</button>
              <button onclick="attractions()" id="attractionsButton" class="p-3 button">Vacancy</button>
            </div>

            <div class="tabs-container">
              <div id="aboutTab" class="p-3 tab-content">
                <p>
                  Taibha Hostel provides a peaceful, student-friendly stay with top-notch amenities. Conveniently located near major academic institutions and local attractions, the hostel offers secure, hygienic, and affordable accommodations with modern facilities.
                </p>
              </div>
              <div style="color:#fff;" id="timeToVisitTab" class="p-3 tab-content">
                <ul>
                  <li>Private and Shared Rooms</li>
                  <li>24/7 High-Speed Wi-Fi</li>
                  <li>Power Backup and Security</li>
                  <li>Common Study Rooms</li>
                  <li>Meal Plans Available</li>
                </ul>
              </div>
              <div id="attractionsTab" class="p-3 tab-content">
                <p style="color:#fff; text-align:center; font-size: 100px;">12/50</p>
              </div>
            </div>
          </div>
        </div>

        <div class="text-center mt-4">
          <form id="reservationForm" action="/reserv" method="POST">
            <input type="hidden" name="hostelId" id="hostelId" value="102">
            <button type="button" class="add-todo-button2" id="addTodoButton2">Reserve a room</button>
          </form>
        </div>

        <div class="todos-bg-container mt-5">
          <div class="container">
            <h1 class="todos-heading"><span style="color:red">Reviews</span> & <span style="color:royalblue">Ratings</span></h1>
            <h2 class="create-task-heading">Write <span class="create-task-heading-subpart">Review</span></h2>
            <input type="text" id="todoUserInput" class="todo-user-input" placeholder="Write your review here"/>

            <div class="rating-container">
              <label for="ratingInput">Rating:</label>
              <select id="ratingInput" class="rating-select">
                <option value="5">⭐⭐⭐⭐⭐</option>
                <option value="4">⭐⭐⭐⭐</option>
                <option value="3">⭐⭐⭐</option>
                <option value="2">⭐⭐</option>
                <option value="1">⭐</option>
              </select>
            </div>

            <button class="add-todo-button" id="addTodoButton">ADD</button>

            <h2 class="todo-items-heading">People <span class="todo-items-heading-subpart">Reviews</span></h2>
            <ul class="todo-items-container" id="todoItemsContainer"></ul>
          </div>
        </div>
      </div>
    </div>

    <!-- JavaScript Includes -->
    <script src="js/review.js"></script>
    <script src="js/taibha.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script>
      document.getElementById("addTodoButton2").addEventListener("click", function() {
        let confirmation = confirm("Confirm reservation?");
        if (confirmation) {
          document.getElementById("reservationForm").submit();
        }
      });
    </script>

    <div id="deleteModal" class="modal" style="display: none;">
      <div class="modal-content">
        <p>Are you sure you want to delete this review?</p>
        <div class="modal-buttons">
          <button id="confirmDelete">Yes</button>
          <button id="cancelDelete">No</button>
        </div>
      </div>
    </div>

    <% if (reservationAlert) { %>
      <script>
        alert('<%= reservationAlert %>');
      </script>
    <% } %>
  </body>
</html>
