<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="css/homepage.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <style>
        /* Custom CSS for the search page */
        .search-bar {
            text-align: center;
            margin: 0 auto;
            padding: 20px;
            margin-top:15px;
        }

        .hostel-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            margin: 15px 0;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background-color: #fff;
            cursor: pointer; /* Add pointer cursor to indicate clickable cards */
        }

        .hostel-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .hostel-card img {
            border-radius: 10px;
            max-width: 100%;
            height: auto;
        }

        .hostel-card h3 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }

        .hostel-card p {
            font-size: 16px;
            color: #555;
            margin-bottom: 5px;
            width: 30vw;
        }

        .hostel-card .btn {
            margin-top: 10px;
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .hostel-card .btn:hover {
            background-color: #0056b3;
        }

        .home-bg {
            background-color: #f8f9fa;
        }

       

        .brand {
        font-size: 48px;
        font-family: 'Playfair Display', serif;
        font-weight: bolder;
        cursor: pointer;
        
        }
        .heady{
            text-align:center ;
            margin-top: 150px;
        }

        .para {
            font-size: 18px;
            color: #666;
        }
    </style>
</head>

<body class="home-bg">
    <!-- Navigation Bar -->
    <section>
        <div>
            <nav class="navbar navbar-expand-lg navbar-light bar-bg fixed-top">
                <div class="container">
                    <a class="navbar-brand" href="/">
                        <h1 class="brand"><span style="color: red;">Stay</span><span style="color: royalblue;">Spot</span></h1>
                    </a>
                    <button style="background-color:#fff;" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div style="padding: 10px;" class="navbar-nav">
                            <a class="nav-link active" id="navItem1" href="/">
                                <span style="padding-left: 10px;padding-right: 10px; color:#fff; font-family:Roboto; font-weight:600; font-size: 18px;">Home</span>
                                <span class="sr-only">(current)</span>
                            </a>
                            <a style="padding-left: 10px; padding-right: 10px; color:#fff; font-family:Roboto; font-size: 18px; font-weight:600;" class="nav-link" href="/my-reserves" id="navItem2">My Reserves</a>
                            <a style="padding-left: 10px; padding-right: 10px; color:#fff; font-family:Roboto; font-size: 18px; font-weight:600;" class="nav-link" href="/search" id="navItem3">Search</a>
                            <a style="padding-left: 10px;padding-right: 10px; color:#fff; font-family:Roboto; font-size: 18px; font-weight:600;" class="nav-link" href="/login" id="navItem4">Login</a>
                            <a style="padding-left: 10px; padding-right: 10px; color:#fff; font-family:Roboto; font-size: 18px; font-weight:600;" class="nav-link" href="/contact-us" id="navItem4">Contact us</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        
    </section>

    <!-- Main Content -->
    <div class="container  d-flex flex-column justify-content-center align-items-center min-vh-100">
        <div class="column">
            <div class="col-12 justify-content-center">
                <div class="heady">
                    <h1>Find Your Perfect Stay</h1>
                    <p class="para" style="font-size: 18px;">“Search for hostels and PGs near you!”</p>
                </div>
            </div>

            <!-- Search Bar -->
            <div class="col-12 justify-content-center">
                <div class="search-bar">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for hostels by location or name..." aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="button">Search</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Hostel List -->
            <div class="col-12 justify-content-center">
                <div class="" id="hostel-list">
                    <!-- Annex Hostel -->
                    <div class="hostel-card" onclick="window.location.href='/annex'">
                        <div class="row">
                            <div class="col-md-3">
                                <img src="https://via.placeholder.com/200" alt="Annex Hostel">
                            </div>
                            <div class="col-md-9">
                                <h3>Annex Hostel</h3>
                                <p class="location"><strong>Location:</strong> Delhi</p>
                                <p><strong>Facilities:</strong> Wi-Fi, AC, Laundry, Food</p>
                                <p><strong>Price:</strong> ₹5000/month</p>
                                <button class="btn btn-primary" onclick="window.location.href='/book-annex'">Book Now</button>
                            </div>
                        </div>
                    </div>

                    <!-- Taibha Hostel -->
                    <div class="hostel-card" onclick="window.location.href='/taibha'">
                        <div class="row">
                            <div class="col-md-3">
                                <img src="https://via.placeholder.com/200" alt="Taibha Hostel">
                            </div>
                            <div class="col-md-9">
                                <h3>Taibha Hostel</h3>
                                <p class="location"><strong>Location:</strong> Mumbai</p>
                                <p><strong>Facilities:</strong> Wi-Fi, AC, Gym, Food</p>
                                <p><strong>Price:</strong> ₹6000/month</p>
                                <button class="btn btn-primary" onclick="window.location.href='/book-taibha'">Book Now</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // JavaScript for handling search functionality
        document.querySelector('.btn-primary').addEventListener('click', function () {
            const searchQuery = document.querySelector('.form-control').value.toLowerCase();
            const hostelCards = document.querySelectorAll('.hostel-card');

            hostelCards.forEach(card => {
                const hostelName = card.querySelector('h3').textContent.toLowerCase();
                const location = card.querySelector('.location').textContent.toLowerCase();

                if (hostelName.includes(searchQuery) || location.includes(searchQuery)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    </script>
</body>

</html>